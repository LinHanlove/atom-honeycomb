{
  "name": "honeycomb",
  "displayName": "honeycomb",
  "version": "0.0.1",
  "description": "Honeycomb: Streamline your browsing experience with quick search, cache clearing, screenshot capture, and more — all in one convenient extension.",
  "author": "LinHan",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@reduxjs/toolkit": "^2.2.7",
    "cropperjs": "^1.6.2",
    "plasmo": "0.89.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@iconify/react": "^5.0.2",
    "@plasmohq/storage": "^1.12.0",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "<all_urls>"
    ],
    "permissions": [
      "topSites",
      "scripting",
      "activeTab",
      "tabs",
      "storage",
      "contextMenus",
      "notifications"
    ],
    "commands": {
      "open": {
        "suggested_key": {
          "default": "Alt+O",
          "mac": "Alt+O",
          "windows": "Alt+O"
        },
        "description": "激活扩展"
      },
      "areaScreenshot": {
        "suggested_key": {
          "default": "Alt+A",
          "mac": "Alt+A",
          "windows": "Alt+A"
        },
        "description": "区域截图"
      }
    }
  }
}